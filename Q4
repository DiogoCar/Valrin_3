package exercicio_fix;

import javax.swing.JOptionPane;
/**
 *
 * @author Discente
 */

public class Valrin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here

 int m;
 String sm;
 
     
    sm=JOptionPane.showInputDialog(null, "Numero maximo: ");
    m= Integer.parseInt(sm);   
 
 double pi= 4.0,sum=0.0;
   
   for(int i =3,c=2; c<=m;i+=2,c++) {if(c%2==0){sum -= (4.0/i);}else{sum+=(4.0/i);}}
   
   pi+=sum;
   
   JOptionPane.showMessageDialog(null,"Valo aproximado: "+pi);
    }
   
}
